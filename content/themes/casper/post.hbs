{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<header class="cd-header">
  <div class="cd-logo">{{#if @blog.logo}}<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>{{/if}}</div>
  <nav>
			<ul class="cd-secondary-nav">
        {{navigation}}
      </ul>
	</nav> <!-- secondary-nav -->

  {{#if @blog.navigation}}<a class="cd-primary-nav-trigger" href="#">
		<span class="cd-menu-text">Menu</span><span class="cd-menu-icon"></span>
	</a> <!-- cd-primary-nav-trigger -->{{/if}}

  <a class:""><span class="go-back icon-arrow-left"></span></a>
</header>

<nav>
		<ul class="cd-primary-nav">
      <li class="cd-label" style="margin-top:0.5rem;">Explore Website</li>
      {{navigation}}
      <li class="cd-label">About Us</li>
      <p>{{@blog.description}}</p>
      <li class="cd-label">Subscribe to {{@blog.title}}</li>
      {{>subscriber}}
      <li class="cd-label">Contact</li>

    </ul>
</nav>

<section class="cover">
  <section class="cd-intro {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}"></section>
  <section class="post_header">
      <div class="tag">{{tags separator=" "}}</div>
      <h1>{{title}}</h1>
      <div class="header_meta">{{#author}}by <a href="{{url}}">{{name}}</a> on {{/author}}<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></div>
  </section>
</section>

<main class="cd-main-content">
    <article class="{{post_class}}">

        <section class="cd-container">
            {{content}}
        </section>

        {{>footer}}

    </article>
</main>

{{!-- Links to Previous/Next posts --}}
<aside class="read-next">
    {{#next_post}}
    <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/next_post}}
    {{#prev_post}}
    <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
        </section>
    </a>
    {{/prev_post}}
</aside>

{{/post}}
